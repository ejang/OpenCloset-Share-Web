# Handlebars helper
Handlebars.registerHelper 'clothesCode', (opts) ->
  opts.fn(this).replace(/^0/, '')

Handlebars.registerHelper 'commify', (opts) ->
  opts.fn(this).replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,")

